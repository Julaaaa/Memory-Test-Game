<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5AC2CF">


    <TextView

        android:id="@+id/titleSettings"
        android:layout_width="320dp"
        android:layout_height="107dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="@string/settings"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amountOfNumber"
        android:layout_width="175dp"
        android:layout_height="54dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="The amount of number: "
        app:layout_constraintBottom_toTopOf="@+id/textGameTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleSettings"
        app:layout_constraintVertical_bias="0.96" />

    <TextView
        android:id="@+id/textGameTime"
        android:layout_width="186dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Game time: "
        app:layout_constraintBottom_toTopOf="@+id/randomNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/randomNumber"
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:text="Random numbers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleSettings"
        app:layout_constraintVertical_bias="0.682" />

    <Button
        android:id="@+id/backFromTheSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="35dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonStart"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="35dp"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <MultiAutoCompleteTextView
        android:id="@+id/giveNumber"
        android:layout_width="103dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/giveTimeOfTheGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/amountOfNumber"
        app:layout_constraintTop_toBottomOf="@+id/titleSettings" />

    <MultiAutoCompleteTextView
        android:id="@+id/giveTimeOfTheGame"
        android:layout_width="101dp"
        android:layout_height="52dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/randomNumber"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>